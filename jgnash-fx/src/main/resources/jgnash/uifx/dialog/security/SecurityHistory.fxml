<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import jgnash.resource.font.FontAwesomeImageView?>
<?import jgnash.uifx.control.DatePickerEx?>
<?import jgnash.uifx.control.DecimalTextField?>
<?import jgnash.uifx.control.IntegerTextField?>
<?import jgnash.uifx.control.SecurityComboBox?>
<GridPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="jgnash.uifx.dialog.security.SecurityHistoryController" styleClass="form, dialog">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <TableView fx:id="tableView" minHeight="200.0" prefWidth="200.0"/>

        <LineChart fx:id="chart" GridPane.rowIndex="1">
            <xAxis>
                <CategoryAxis side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </LineChart>
        <GridPane GridPane.rowIndex="2" styleClass="form">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="%Label.Security"/>
                <SecurityComboBox fx:id="securityComboBox" maxWidth="Infinity" GridPane.columnIndex="1"
                                  GridPane.columnSpan="3" GridPane.hgrow="ALWAYS"/>

                <Label text="%Label.Date" GridPane.rowIndex="1"/>
                <DatePickerEx fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"/>
                <Button fx:id="updateButton" onAction="#handleOnlineUpdate" text="%Button.UpdateOnline"
                        maxWidth="Infinity"
                        GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <graphic>
                        <FontAwesomeImageView glyphName="CLOUD_DOWNLOAD"/>
                    </graphic>
                </Button>

                <Label text="%Label.Close" GridPane.rowIndex="2"/>
                <DecimalTextField fx:id="closeTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="%Label.Volume" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <IntegerTextField fx:id="volumeTextField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Label text="%Label.High" GridPane.rowIndex="3"/>
                <DecimalTextField fx:id="highTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="%Label.Low" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <DecimalTextField fx:id="lowTextField" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
        <ButtonBar GridPane.rowIndex="3">
            <buttons>
                <Button fx:id="deleteButton" onAction="#handleDeleteAction" text="%Button.Delete"
                        ButtonBar.buttonData="LEFT"/>
                <Button onAction="#handleClearAction" text="%Button.Clear" ButtonBar.buttonData="LEFT"/>
                <Button fx:id="addButton" onAction="#handleAddAction" text="%Button.Add" ButtonBar.buttonData="LEFT"/>
                <Button onAction="#handelCloseAction" text="%Button.Close" ButtonBar.buttonData="CANCEL_CLOSE"/>
            </buttons>
        </ButtonBar>
    </children>
</GridPane>
